; مثال فایل کانفیگ AMI برای Asterisk
; این فایل را کپی کنید و به نام manager.conf ذخیره کنید
; مسیر: /etc/asterisk/manager.conf (یا conf/asterisk/manager.conf برای Docker)

[general]
enabled = yes
port = 5038
bindaddr = 0.0.0.0  ; اگر می‌خواهید از بیرون به AMI وصل شوید

[ami_user]
secret = ami_secret
deny = 0.0.0.0/0.0.0.0
permit = 192.168.0.0/255.255.0.0  ; محدوده IP مجاز (تغییر دهید)
read = system,call,log,verbose,command,agent,user
write = system,call,log,verbose,command,agent,user

; برای production، کاربران بیشتری اضافه کنید:
; [ami_admin]
; secret = یک_رمز_قوی_اینجا
; deny = 0.0.0.0/0.0.0.0
; permit = 10.0.0.0/255.0.0.0
; read = all
; write = all

